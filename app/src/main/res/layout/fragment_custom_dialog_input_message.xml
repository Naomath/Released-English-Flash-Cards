<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naoto.dennnoukishidann.word_book.dialogFragment.CustomDialogAddBookFragment">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/background_dialog"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dialog_title"
            android:gravity="center"
            android:padding="10dp"
            android:text="説明"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <EditText
                android:id="@+id/edit_message"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="5"
                android:hint="単語帳の説明を入力してください。"
                android:textSize="13dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="2">

            <Button
                android:id="@+id/decide_button"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/backgroud_dialog_positive"
                android:text="アップロード"
                android:textSize="10dp"
                android:textColor="@android:color/white" />

            <RelativeLayout
                android:id="@+id/relative_error"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/background_dialog_error_button" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
